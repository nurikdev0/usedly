{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/usedly-api/src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/usedly-api/tsconfig.app.json"
	},
	"monorepo": true,
	"root": "apps/usedly-api",
	"projects": {
		"usedly-api": {
			"type": "application",
			"root": "apps/usedly-api",
			"entryFile": "main",
			"sourceRoot": "apps/usedly-api/src",
			"compilerOptions": {
				"tsConfigPath": "apps/usedly-api/tsconfig.app.json"
			}
		},
		"usedly-batch": {
			"type": "application",
			"root": "apps/usedly-batch",
			"entryFile": "main",
			"sourceRoot": "apps/usedly-batch/src",
			"compilerOptions": {
				"tsConfigPath": "apps/usedly-batch/tsconfig.app.json"
			}
		}
	}
}
